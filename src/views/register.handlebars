<section class="register-container">
    <h2>Crear Cuenta</h2>
    <form action="" id="registerForm">
        <div class="form-group">
            <label for="first_name">Nombre:</label>
            <input type="text" id="nombre" name="first_name" required>
        </div>

        <div class="form-group">
            <label for="last_name">Apellido:</label>
            <input type="text" id="apellido" name="last_name" required>
        </div>

        <div class="form-group">
            <label for="age">Edad:</label>
            <input type="text" id="edad" name="age" required>
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <small id="emailError" class="error-hint"></small>
        </div>

        <div class="form-group">
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required>
            <small id="passwordError" class="error-hint">Mínimo 8 caracteres, una mayúscula, una minúscula un número y un caracter especial (@$!%*?&amp;).</small>
        </div>

        <button type="submit" id="btnRegister">Registrarse</button>
    </form>
    
    <div id="generalError" class="alert-danger" style="display: none;"></div>
    <p>¿Ya tienes cuenta? <a href="/login">Inicia sesión aquí</a></p>
</section>

{{>menu}}

<script type="module" src="/js/register.js"></script>